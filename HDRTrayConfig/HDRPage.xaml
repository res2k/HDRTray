<Page
    x:Class="HDRTrayConfig.HDRPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HDRTrayConfig"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <StackLayout x:Name="DisplaysLayout" Orientation="Vertical" Spacing="8" />

        <DataTemplate x:Key="DisplayTemplate" x:DataType="local:HDRDisplay">
            <CheckBox Content="{x:Bind Name}" />
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Spacing="{StaticResource SettingsGroupsSpacing}" Padding="16">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Spacing="{StaticResource SettingsPanelSpacing}">
                <TextBlock Text="Global HDR control" Style="{StaticResource SectionHeaderStyle}"/>
                <local:ToggleCard x:Name="HDRToggle" Text="Enable HDR" IsOn="{x:Bind Path=ViewModel.IsHDREnabled, Mode=OneWay}" Toggled="OnHDRToggled" />
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Spacing="{StaticResource SettingsPanelSpacing}">
                <TextBlock Text="Enabled Displays" Style="{StaticResource SectionHeaderStyle}" />
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                            BorderThickness="1"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            CornerRadius="{ThemeResource ControlCornerRadius}"
                            Padding="16,12">
                    <ItemsRepeater
                        x:Name="displaysRepeater"
                        Layout="{StaticResource DisplaysLayout}"
                        ItemTemplate="{StaticResource DisplayTemplate}"
                        ItemsSource="{x:Bind Path=ViewModel.Displays, Mode=OneWay}"/>
                </StackPanel>
            </StackPanel>


        </StackPanel>
    </ScrollViewer>


</Page>
